{% include 'product__classes' with base_class: 'product' %}
<article class="{{ product_classes }}">
  <h1 class="product__title">{{ product.title }}</h1>
  {% include 'product__images' %}
  {% include 'product__pricing' %}
  {% include 'product__availability' %}
  {% include 'product__tags' %}
  {% include 'product__attributes' %}
  {% include 'form--product' %}
  {% if product.description != blank %}
    <div class="product__description">
      {{ product.description }}
    </div>
  {% endif %}
</article>
